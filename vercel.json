{
    "version": 2,
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ],
    "builds": [
        {
            "src": "/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "/assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "/audio/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/(?<path>.*)",
            "dest": "/assets/<path>",
            "headers": {
                "Content-Type": "audio/mpeg"
            }
        },
        {
            "src": "/audio/(?<path>.*)",
            "dest": "/audio/<path>"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}