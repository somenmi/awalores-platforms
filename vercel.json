{
    "version": 2,
    "builds": [
        {
            "src": "/*.html",
            "use": "@vercel/static"
        },
        {
            "src": "/assets/**",
            "use": "@vercel/static"
        },
        {
            "src": "/audio/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/assets/(?<path>.*)",
            "dest": "/assets/<path>"
        },
        {
            "src": "/sitemap.xml",
            "dest": "/sitemap.xml"
        },
        {
            "src": "/robots.txt",
            "dest": "/robots.txt"
        },
        {
            "src": "/audio/(?<path>.*)",
            "dest": "/audio/<path>"
        },
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ]
}